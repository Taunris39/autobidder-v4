{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node"],
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": false,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "get-gmail-refresh-token.ts"],
  "exclude": ["node_modules", "dist", "src/eslint.config.ts"]
}
